{
    "name": "mlp_v3_deep_256",
    "description": "V3 MLP - Deep (5 layers) with 256-wide hidden dims, variable dz support",
    
    "model_type": "mlp",
    "hidden_dims": [256, 256, 256, 128, 64],
    "activation": "silu",
    "dropout": 0.0,
    
    "data_path": "V3/data/training_mlp_v3_100M_v2.npz",
    "train_fraction": 0.8,
    "val_fraction": 0.1,
    "test_fraction": 0.1,
    "max_samples": null,
    
    "batch_size": 4096,
    "epochs": 100,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "scheduler": "cosine",
    "warmup_epochs": 5,
    
    "patience": 20,
    "min_delta": 1e-6,
    
    "checkpoint_dir": "V3/trained_models",
    "save_every": 10,
    "log_every": 1,
    "use_tensorboard": true,
    
    "device": "cuda",
    "num_workers": 4,
    "pin_memory": true
}
