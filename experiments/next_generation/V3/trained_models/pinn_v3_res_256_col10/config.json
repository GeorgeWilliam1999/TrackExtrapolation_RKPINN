{
  "name": "pinn_v3_res_256_col10",
  "description": "PINN Residual with 10 collocation points (baseline)",
  "model": {
    "architecture": "residual",
    "hidden_dims": [
      256,
      256
    ],
    "activation": "silu",
    "dropout": 0.0
  },
  "data": {
    "train_path": "V3/data/training_pinn_v3_col10_v2.npz",
    "val_split": 0.1,
    "n_collocation": 10
  },
  "training": {
    "batch_size": 4096,
    "epochs": 50,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "scheduler": "cosine",
    "warmup_epochs": 5,
    "grad_clip": 1.0
  },
  "loss": {
    "lambda_ic": 10.0,
    "lambda_endpoint": 1.0,
    "lambda_collocation": 1.0
  },
  "output": {
    "dir": "V3/trained_models/pinn_v3_res_256_col10",
    "save_best": true,
    "save_every": 10
  }
}